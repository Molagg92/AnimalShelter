@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Animal

<h4>Add an animal to our shelter:</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Type)
    @Html.TextBoxFor(model => model.Type)
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.Age)
    @Html.TextBoxFor(model => model.Age)
    @Html.LabelFor(model => model.DateOfAdmittance)
    @Html.TextBoxFor(model => model.DateOfAdmittance)
    @Html.LabelFor(model => model.FavoriteFood)
    @Html.TextBoxFor(model => model.FavoriteFood)
    <input type="submit" value="Add a new animal" />
}
<p>@Html.ActionLink("Show all animals", "Index")</p>