
@{
    Layout = "_Layout";
}

@using AnimalShelter.Models;

<h1>Welcome to the AnimalShelter!</h1>

@if (@Model.Count == 0)
{
  <h3>No animals have been added yet!</h3>
} 


<ul>
@foreach (Animal animal in Model)
  { <li>@Html.ActionLink($"{animal.Type}", "Type of animal", new { id = animal.AnimalId })</li>
      <li>@Html.ActionLink($"{animal.Name}", "Name of animal", new { id = animal.AnimalId })</li>
      <li>@Html.ActionLink($"{animal.Age}", "Age", new { id = animal.AnimalId })</li>
      <li>@Html.ActionLink($"{animal.DateOfAdmittance}", "Date of admittance", new { id = animal.AnimalId })</li>
      <li>@Html.ActionLink($"{animal.FavoriteFood}", "Favorite food", new { id = animal.AnimalId })</li>

  }
</ul>

<p>@Html.ActionLink("Show all animals", "Index", "AnimalShelter")</p>